/*
// 1. Дан массив размера N и целые числа K и L(1 ≤ K ≤ L ≤ N).
//Найти среднее арифметическое элементов массива с номерами от K до L включительно.
#include <iostream>
using namespace std;
int main() 
{
	int K, L, n, i, k, array[] = { 4, 6, 2, 9, 7, 5, 3, 4 };
	float sr;
	k = 0;
	cout << "vvedite K i L" << endl;
	cin >> K >> L;
	n = L - K + 1;
	for (i = K; i != L + 1; i++)
	{
		k = k + array[i];
	}
	sr = k / n;
	cout << sr << endl;
}
