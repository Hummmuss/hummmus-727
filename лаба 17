#include <iostream>
using namespace std;
int main()
{
	int arr[] = { 3, 5, 2, 7, 9, 4, 1, 98, 23 }, i, max, nmax;
	max = arr[0];
	int n = sizeof(arr) / sizeof(int);
	for (i = 1; i < n; i++)
	{
		if ((arr[i] > arr[i - 1]) and (arr[i + 1] > arr[i]) and (arr[i]>=max))
		{
			nmax = i;
			max = arr[i];
		}
	}
	cout << max << endl;
