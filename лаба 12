/*/
//1. Дан номер дня – целое число от 1 до 31 и месяца — целое число в диапазоне 1–12
//(1 — январь, 2 — февраль и т.д.).Вывести дату в виде текста(например, «пятое января»).
#include <iostream>
using namespace std;
int main()
{
	int d, m;
	setlocale(LC_ALL, "rus");
	cout << "введите день" << endl;
	cin >> d;
	cout << "введите месяц" << endl;
	cin >> m;
	if (d == 1) { cout << "первое "; }
	if (d == 2) { cout << "второе "; }
	if (d == 3) { cout << "третье "; }
	if (d == 4) { cout << "четвертое "; }
	if (d == 5) { cout << "пятое "; }
	if (d == 6) { cout << "шестое "; }
	if (d == 7) { cout << "седьмое "; }
	if (d == 8) { cout << "восьмое "; }
	if (d == 9) { cout << "девятое "; }
	if (d == 10) { cout << "десятое "; }
	if (d == 11) { cout << "одиннадцатое "; }
	if (d == 12) { cout << "двенадцатое "; }
	if (d == 13) { cout << "тринадцатое "; }
	if (d == 14) { cout << "четырнадцатое "; }
	if (d == 15) { cout << "пятнадцатое "; }
	if (d == 16) { cout << "щестнадцатое "; }
	if (d == 17) { cout << "семнадцатое "; }
	if (d == 18) { cout << "весемнадцатое "; }
	if (d == 19) { cout << "девятнадцатое "; }
	if (d == 20) { cout << "двадцатое "; }
	if (d == 21) { cout << "двадцать первое "; }
	if (d == 22) { cout << "двадцать второе "; }
	if (d == 23) { cout << "двадцать третье "; }
	if (d == 24) { cout << "двадцать четвертое "; }
	if (d == 25) { cout << "двадцать пятое "; }
	if (d == 26) { cout << "двадцать шестое "; }
	if (d == 27) { cout << "двадцать седьмое "; }
	if (d == 28) { cout << "двадцать восьмое "; }
	if (d == 29) { cout << "двадцать девятое "; }
	if (d == 30) { cout << "тридцатое "; }
	if (d == 31) { cout << "тридцать первое "; }
	if (m == 1) { cout << "января"; }
	if (m == 2) { cout << "февраля"; }
	if (m == 3) { cout << "марта"; }
	if (m == 4) { cout << "апреля"; }
	if (m == 5) { cout << "мая"; }
	if (m == 6) { cout << "июня"; }
	if (m == 7) { cout << "июля"; }
	if (m == 8) { cout << "августа"; }
	if (m == 9) { cout << "сентября"; }
	if (m == 10) { cout << "октября"; }
	if (m == 11) { cout << "ноября"; }
	if (m == 12) { cout << "декабря"; }
}*/


/*
//2. Робот может перемещаться в четырех направлениях («С» — север, «З» — запад, «Ю» — юг, «В» — восток) 
//и принимать три цифровые команды: 0 — продолжать движение, 1 — поворот налево, −1 — поворот направо. 
//Дан символ C — исходное направление робота и целое число N — посланная ему команда. Вывести направление робота после выполнения полученной команды
#include <iostream>
#include <windows.h>
using namespace std;
int main()
{
	int n;
	char c;
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	setlocale(LC_ALL, "rus");
	cout << "Введите исходное направление робота" << endl;
	cin >> c;
	cout << "Введите команду" << endl;
	cin >> n;

	if ((c == 'С') and (n == 0)) { cout << "C"; }
	if ((c == 'С') and (n == 1)) { cout << 'З'; }
	if ((c == 'С') and (n == -1)) { cout << 'В'; }
	if ((c == 'Ю') and (n == 0)) { cout << 'Ю'; }
	if ((c == 'Ю') and (n == 1)) { cout << 'В'; }
	if ((c == 'Ю') and (n == -1)) { cout << 'З'; }
	if ((c == 'В') and (n == 0)) { cout << 'В'; }
	if ((c == 'В') and (n == 1)) { cout << 'С'; }
	if ((c == 'В') and (n == -1)) { cout << 'Ю'; }
	if ((c == 'З') and (n == 0)) { cout << 'З'; }
	if ((c == 'З') and (n == 1)) { cout << 'Ю'; }
	if ((c == 'З') and (n == -1)) { cout << 'С';}
}*/


