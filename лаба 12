/*
//4. Дано целое число в диапазоне 100–999. Вывести строку-описание данного числа, 
//например: 256 — «двести пятьдесят шесть», 814 — «восемьсот четырнадцать».
#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "rus");
	int a, s, d, e;
	cout << "введите число" << endl;
	cin >> a;
	s = a / 100;
	d = a / 10 % 10;
	e = a % 10;
	if (s == 1) {cout << "сто ";}
	if (s == 2) { cout << "двести "; }
	if (s == 3) { cout << "триста "; }
	if (s == 4) { cout << "четыреста "; }
	if (s == 5) { cout << "пятьсот "; }
	if (s == 6) { cout << "шестьсот "; }
	if (s == 7) { cout << "семьсот "; }
	if (s == 8) { cout << "восемьсот "; }
	if (s == 9) { cout << "девятьсот "; }
	if (d == 1 and e == 1) { cout << "одиннадцать "; }
	if (d == 1 and e == 2) { cout << "двенадцать "; }
	if (d == 1 and e == 3) { cout << "тринадцать "; }
	if (d == 1 and e == 4) { cout << "четырнадцать "; }
	if (d == 1 and e == 5) { cout << "пятнадцать "; }
	if (d == 1 and e == 6) { cout << "шестнадцать "; }
	if (d == 1 and e == 7) { cout << "семнадцать "; }
	if (d == 1 and e == 8) { cout << "восемнадцать "; }
	if (d == 1 and e == 9) { cout << "девятнадцать "; }
	if (d == 2) { cout << "двадцать "; }
	if (d == 3) { cout << "тридцать "; }
	if (d == 4) { cout << "сорок "; }
	if (d == 5) { cout << "пятьдесят "; }
	if (d == 6) { cout << "шестьдесят "; }
	if (d == 7) { cout << "семьдесят "; }
	if (d == 8) { cout << "восемьдесят "; }
	if (d == 9) { cout << "девяносто "; }
	if (d != 1 and e == 1) { cout << "один"; }
	if (d != 1 and e == 2) { cout << "два"; }
	if (d != 1 and e == 3) { cout << "три"; }
	if (d != 1 and e == 4) { cout << "четыре"; }
